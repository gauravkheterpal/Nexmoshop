<?xml version="1.0"?>
<config>
    <modules>
        <Nexmoshop_Customer>
            <version>1.0.0</version>
        </Nexmoshop_Customer>
    </modules>
    <global>
        <helpers>
            <nexmoshop_customer>
                <class>Nexmoshop_Customer_Helper</class>
            </nexmoshop_customer>
        </helpers>
        <resources>
            <nexmoshop_customer_setup>
                <setup>
                    <module>Nexmoshop_Customer</module>
                    <class>Mage_Customer_Model_Resource_Setup</class>
                </setup>
            </nexmoshop_customer_setup>
        </resources>
    </global>
    <frontend>
        <layout>
            <updates>
                <nexmoshop_customer>
                    <file>nexmoshop_customer.xml</file>
                </nexmoshop_customer>
            </updates>
        </layout>
        <translate>
            <modules>
                <Nexmoshop_Customer>
                    <files>
                        <default>Nexmoshop_Customer.csv</default>
                    </files>
                </Nexmoshop_Customer>
            </modules>
        </translate>
    </frontend>
</config>